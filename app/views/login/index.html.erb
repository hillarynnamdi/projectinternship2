
<link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Source+Sans+Pro">

<% provide(:title,'InvoiceR-Login') %>

<div class='loginwrapper'>
		<%= form_tag(:action => 'create') do |f| %>
			<table>
				<tr><th colspan=2 style='border-bottom:1px solid #eeeeee;box-shadow: 0px 3px 5px #eeeeee'>
				InvoiceR Login</th></tr>
				<tr>
					<th colspan=2>
						<span id='loginflash'><% flash.each do |name, msg| %>
						<%= content_tag :div, msg, class: name %>
						<% end %>
						</span>
					</th>
				</tr>
				<tr>
					<td>
						<%= image_tag "logimn.JPG" %> <%= label_tag :email %>
					</td>
					<td>
						<%= email_field_tag(:email) %>
					</td>
				</tr>
				<tr>
					<td>
						<%= label_tag :password %>
					</td>
					<td>
						<%= password_field_tag :password %>
					</td>
				</tr>
				<tr>
					<td>
						&nbsp;
					</td>
					<td>
						<%= label_tag :remember_me %> <%= check_box_tag :remember_me, 1, params[:remember_me] %>
					</td>
				</tr>
				<tr>
				<td>
				&nbsp;
				</td>
					<td>
						<%= submit_tag 'LOGIN' %>
					</td>
				</tr>
				<tr>
					<td>
						&nbsp;
					</td>
					<td>
						<%= link_to "Forgot password?",forgot_password_index_path %>
					</td>
				</tr>
				<tr>
				<td>
					&nbsp;
				</td>
				<td>
					<%= link_to "Don't have an account?",users_path %>
				</td>
				</tr>

			</table>
		<% end %>


</div>