
<% provide(:title,'EDIT CLIENT') %>

	<div class='wrapper'>

			
				
		<%= form_for([@client.user,@client]) do |f| %>

			<div class='table_wrapper'>
					<%= render 'clients/add_client_error' %>
				<div class='inner_table_div'>
					<div class='client_add_div'>
		
					<%= link_to 'Back to CLIENTS' , client_path(@user.company_name) %>
		
					</div>

						<fieldset>
							<legend class='legend_text'> EDIT CLIENT </legend>			
								<table border=0px>
									<tr><td>First Name</td>

									<td><%= f.text_field :first_name,value:@client.first_name %></td></tr>

									<tr><td>Last Name</td>

									<td><%= f.text_field :last_name,value:@client.last_name %></td></tr>

									<tr><td>Email</td>

									<td><%= f.email_field :email,value:@client.email %></td></tr>

									
									<tr><td>Address</td>

									<td><%= f.text_field :address,value:@client.address %></td></tr>

									<tr><td>City</td>
									<td><%= f.text_field :city,value:@client.city %></td></tr>

									
									<tr><td>State</td>

									<td><%= f.text_field :state,value:@client.state %></td></tr>

									<tr><td>Country</td>

									<td><%= f.country_select(:country, {selected: @client.country}) %></td></tr>

									<tr><td> Phone Number</td>

									<td><%= f.text_field :phone_number %></td></tr>
									<tr><td>Gender</td>
									 <td><%= f.select :gender, [['Male', 'male'], ['Female', 'female']], selected: @client.gender %></td></tr>

									<tr><td>&nbsp;</td><td><%= f.submit 'Submit' %>  </td></tr>
							</table>
						</fieldset>
					</div>
				</div>

			<% end %>
	</div>



