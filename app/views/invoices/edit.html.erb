<% provide(:title,'Create Invoice') %>
<div class='invoice'>
	<div class='invoice_header'>
		<div class='logo'>
				<span class='logo_span'>
					<%= image_tag @user.image_url(),alt:"company logo" %>
				</span>
				<ul>
					<li>
						<%= @user.company_name %>
					</li>
					<li>
						<%= @user.company_address %>,						
					</li>
					<li>
						<%= @user.company_city %>,
						<%= @user.company_state %>.
					</li>
					<li>
						<%= @user.company_country %>.
					</li>
					<li>
						phone:<%= @user.company_phone %>
					</li>
					<li class='bill_text'>
						bill to :
					</li>
					<li>
						<%= @client.first_name%> <%= @client.last_name %>
					</li>
					<li>
						<%= @client.address %> 
					</li>
					<li>
						<%= @client.city %>,<%= @client.state %>.
					</li>
					<li>
						<%= @client.country %>.
					</li>
				</ul>
		</div>
		<div class='middle'>
			<ul>
				<li class='ship_to'>ship to :</li>
				<li>
					<%= @client.first_name%> <%= @client.last_name %>
				</li>
				<li>
					<%= @client.address %> 
				</li>
				<li>
					<%= @client.city %>,<%= @client.state %>.
				</li>
				<li>
					<%= @client.country %>.
				</li>
			</ul>
		</div>
		<div class='invoice_text'>
			<p class='invoice_img'>
				invoice
			</p>
			<ul>
				<li>
					date : 
				</li>
				<li>
					invoice # :
				</li>
				<li>
					client id :
				</li>
				<li>
					date due : 
				</li>
			</ul>
		</div>
	</div>

		<div class='table_div'>
			<table border='1'>
				<tr>
					<th>item code</th>
					<th>description</th>
					<th>qty</th>
					<th>unit</th>
					<th>total</th>
				</tr>
				<tr>
			<%= form_for [@user, @client, @invoice],url:'/' do |f| %>
					<td><%= f.text_field :item_code %></td>
					<td><%= f.text_field :description %></td>
					<td><%= f.text_field :qty %></td>
					<td><%= f.text_field :unit %></td>
					<td><%= f.text_field :total %></td>					
				</tr>
					
			</table>
			<%= f.submit 'preview'%>
			<% end %>
		</div>
</div>